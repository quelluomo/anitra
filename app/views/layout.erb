<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Anitra Anime Tracker</title>
    <!-- Bulma CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
  </head>

  <body>
    <section class="section">
      <div class="has-background-danger">
        <div class="container is-fluid">
          <% if logged_in? %>
            <a href="/shows"><h1 class="title has-text-centered" style="color: #fff;">アニトラ anime tracker</h1></a>
          <nav class="level">
            <p><a class="button is-link" href="/shows/new">Add a Show</a></p>
            <p><a class="button is-link" href="/shows"> See all shows </a></p>
          </nav>
          <% else %>
          <a href="/"><h1 class="title has-text-centered" style="color: #fff;">アニトラ anime tracker</h1></a>
          <% end %>
        </div>
      </div>

      <div class="has-background-primary">
        <div class="container is-fluid">
        <%= yield %>
        </div>
      </div>
    </section>
  </body>


  </body>
</html>
