

<div class="column is-three-quarters-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd">
  <h3 class="is-size-5">Edit Anime</h3><br>
  <form action="/shows/<%= @show.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
  <div class="field">
    <div class="control">
      <input class="input is-primary" type="text" name="title" value="<%= @show.title %>">
    </div>
  </div>
  <div class="field">
    <div class="control">
      <input class="input is-info" type="text" name="score" value="<%= @show.score %>">
    </div>
  <div class="field">
    <div class="control">
      <br><h4 class="is-size-6">Status</h3>
      <input class="input button is-info is-small has-background-success" type="text" name="status" value="watched">
      <input class="input button is-info is-small has-background-warning" type="text" name="status" value="progress">
      <input class="input button is-info is-small has-background-danger" type="text" name="status" value="wishlisted">
      <input class="input button is-info is-small has-background-dark" type="text" name="status" value="dropped">
    </div>
  </div>
  <input class="button has-background-success" type="submit" value="Edit">
  </form>
</div>
